<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TweetDetailsActivity"
    android:layout_margin="30dp">


    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_toRightOf="@id/ivProfileImage"
        android:text="TextView"
        android:textColor="@color/whiteText" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/ivProfileImage"
        android:layout_toRightOf="@id/ivProfileImage"
        android:textColor="@color/greyText"
        android:text="TextView"
        android:layout_below="@id/tvName" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_below="@+id/ivProfileImage"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@color/whiteText"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/ivDivider1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/tvBody"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvRetweetCount"
        android:textColor="@color/whiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ivDivider1"
        android:layout_below="@id/ivDivider1"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="10"/>

    <TextView
        android:id="@+id/tvRetweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvRetweetCount"
        android:layout_alignTop="@+id/tvRetweetCount"
        android:text="Retweets"
        android:layout_marginLeft="5dp"
        android:textColor="@color/greyText"/>


</RelativeLayout>